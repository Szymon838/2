<?xml version="1.0" encoding="UTF-8"?>
<geometricFigures>
    <figure>
        <name>Circle</name>
        <type>2D</type>
        <properties>
            <property>Radius</property>
            <property>Diameter</property>
        </properties>
        <formulas>
            <area>π * radius^2</area>
            <perimeter>2 * π * radius</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Square</name>
        <type>2D</type>
        <properties>
            <property>Side Length</property>
        </properties>
        <formulas>
            <area>side^2</area>
            <perimeter>4 * side</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Rectangle</name>
        <type>2D</type>
        <properties>
            <property>Length</property>
            <property>Width</property>
        </properties>
        <formulas>
            <area>length * width</area>
            <perimeter>2 * (length + width)</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Sphere</name>
        <type>3D</type>
        <properties>
            <property>Radius</property>
        </properties>
        <formulas>
            <volume>(4/3) * π * radius^3</volume>
            <surface_area>4 * π * radius^2</surface_area>
        </formulas>
    </figure>
</geometricFigures>
